<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="centered">
                <form class="form-control" action="/login" method="POST">
                    <fieldset class="form-control">
                      <legend class="form-control">Login</legend>
                      <% if (errorMessage) { %>
                          <div class="user-message user-message--error">
                              <%= errorMessage %>
                          </div>
                      <% } %>
                    <div class="form-control">
                        <label for="email">E-Mail</label>
                        <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : 'form-control' %>"
                            type="email" name="email" id="email" value="<%= oldInput.email %>">
                    </div>
                    <div class="form-control">
                        <label for="password">Password</label>
                        <input
                            class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : 'form-control' %>"
                            type="password" name="password" id="password" value="<%= oldInput.password %>">
                    </div>
                    <div class="form-control">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn" type="submit">Login</button>
                    </div>
                    <div class="centered form-control">
                        <a id="reset" href="/reset">Reset Password</a>
                    </div>
                  </fieldset>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>